.classify {
  background: linear-gradient(180deg, #f0f9ff, #ffffff);
  min-height: 100vh;
  position: relative;
  font-family: "Helvetica Neue", Arial, sans-serif;
  /* 搜索栏 */
  /* 分类容器 */
}
.classify .search {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 134rpx;
  background: linear-gradient(90deg, #42a5f5, #1e88e5);
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.classify .search .search-content {
  width: 100%;
  max-width: 600rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #9f9f9f;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.classify .search .search-content text {
  margin-left: 12rpx;
  font-size: 28rpx;
}
.classify .cate-container {
  width: 100%;
  display: flex;
  padding-top: 134rpx;
  height: calc(100vh - 134rpx);
  /* 左侧分类栏 */
  /* 右侧内容 */
}
.classify .cate-container .cate-left {
  position: fixed;
  top: 134rpx;
  left: 0;
  width: 200rpx;
  height: calc(100vh - 134rpx);
  background-color: #fff;
  overflow-y: auto;
  border-right: 1rpx solid #eee;
}
.classify .cate-container .cate-left .cate-item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #555;
  transition: all 0.3s;
  position: relative;
}
.classify .cate-container .cate-left .active {
  background: #f0f7ff;
  font-weight: bold;
  color: var(--active-color);
}
.classify .cate-container .cate-left .active::before {
  content: "";
  position: absolute;
  left: 0;
  top: 20rpx;
  width: 8rpx;
  height: 60rpx;
  background: var(--active-color);
  border-radius: 0 4rpx 4rpx 0;
}
.classify .cate-container .cate-right {
  margin-left: 200rpx;
  flex: 1;
  height: calc(100vh - 134rpx);
  overflow-y: auto;
  padding: 20rpx;
}
.classify .cate-container .cate-right .cate-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.classify .cate-container .cate-right .cate-content .content-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.2s, box-shadow 0.2s;
}
.classify .cate-container .cate-right .cate-content .content-item:active {
  transform: scale(0.97);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
}
.classify .cate-container .cate-right .cate-content .content-item .item-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 22rpx;
  font-size: 28rpx;
  color: #fff;
}
.classify .cate-container .cate-right .cate-content .content-item .recycle-icon {
  background: linear-gradient(135deg, #42a5f5, #1e88e5);
}
.classify .cate-container .cate-right .cate-content .content-item .hazard-icon {
  background: linear-gradient(135deg, #ef5350, #d32f2f);
}
.classify .cate-container .cate-right .cate-content .content-item .food-icon {
  background: linear-gradient(135deg, #81c784, #388e3c);
}
.classify .cate-container .cate-right .cate-content .content-item .other-icon {
  background: linear-gradient(135deg, #bdbdbd, #757575);
}
.classify .cate-container .cate-right .cate-content .content-item .item-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.classify .cate-container .cate-right .no-more {
  text-align: center;
  font-size: 26rpx;
  color: #aaa;
  padding: 30rpx 0;
}
.tips-card {
  padding: 30rpx;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  background: #fff;
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.08);
}
.tips-card .tips-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.tips-card .tips-header .tips-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}
.tips-card .tips-header .tips-close {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
}
.tips-card .tips-body {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}